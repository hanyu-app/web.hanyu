---
const steps = [
  {
    number: 1,
    title: 'Download Hanyu',
    description: 'Free on the App Store. Create an account with Apple, Google, or email in seconds.',
  },
  {
    number: 2,
    title: 'Set your level',
    description: 'Tell us where you are â€” complete beginner or somewhere in between. Hanyu adapts to you.',
  },
  {
    number: 3,
    title: 'Follow your path',
    description: 'Learn characters, tones, and vocabulary through structured lessons, writing practice, and smart review.',
  },
];
---

<section class="how-it-works" id="how-it-works">
  <div class="container">
    <div class="how-header reveal">
      <span class="section-label">Getting started</span>
      <h2>Up and running in minutes</h2>
    </div>
    <div class="steps">
      {steps.map((step) => (
        <div class="step reveal">
          <div class="step-number" aria-hidden="true">{step.number}</div>
          <h3>{step.title}</h3>
          <p>{step.description}</p>
        </div>
      ))}
    </div>
    <div class="steps-connector" aria-hidden="true"></div>
  </div>
</section>

<style>
  .how-it-works {
    padding-block: var(--section-padding);
    position: relative;
  }

  .how-header {
    text-align: center;
    margin-bottom: 56px;
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    text-align: center;
    position: relative;
  }

  .step-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    margin-inline: auto;
    margin-bottom: 24px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: #fff;
    font-size: 1.375rem;
    font-weight: 700;
    box-shadow: 0 8px 24px rgba(38, 123, 94, 0.25);
  }

  .step h3 {
    margin-bottom: 12px;
  }

  .step p {
    color: var(--color-text-secondary);
    max-width: 280px;
    margin-inline: auto;
  }

  @media (max-width: 768px) {
    .steps {
      grid-template-columns: 1fr;
      gap: 48px;
    }
  }
</style>
