<section class="cta-section" id="cta">
  <div class="cta-bg" aria-hidden="true"></div>
  <div class="container cta-inner reveal">
    <h2>Ready to start your<br/>Chinese journey?</h2>
    <p class="cta-sub">Download Hanyu for free and start learning today.</p>

    <a href="https://apps.apple.com/vn/app/hanyu-app/id6759315453" target="_blank" rel="noopener noreferrer" class="btn btn-primary cta-btn">
      Download Now
    </a>
  </div>
</section>

<style>
  .cta-section {
    position: relative;
    padding-block: clamp(80px, 10vw, 120px);
    text-align: center;
    overflow: hidden;
    background-color: var(--color-text);
    color: #fff;
  }

  .cta-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 70% 60% at 50% 100%, rgba(38, 123, 94, 0.2) 0%, transparent 100%);
    pointer-events: none;
  }

  .cta-inner {
    position: relative;
    max-width: 480px;
  }

  .cta-section h2 {
    margin-bottom: 16px;
    color: #fff;
  }

  .cta-sub {
    color: rgba(255, 255, 255, 0.65);
    font-size: var(--size-body-lg);
    margin-bottom: 40px;
  }

  .cta-btn {
    display: inline-flex;
    padding: 16px 48px;
    font-size: 1.0625rem;
  }
</style>
