---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Screenshots from '../components/Screenshots.astro';
import WhyHanyu from '../components/WhyHanyu.astro';
import HowItWorks from '../components/HowItWorks.astro';
import FAQ from '../components/FAQ.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      "name": "Hanyu",
      "url": "https://hanyu.app",
      "description": "Hanyu is a modern Chinese language learning app for iPhone and iPad with smart flashcards, character writing practice, and pronunciation tools. Android coming soon.",
    },
    {
      "@type": "Organization",
      "name": "Hanyu",
      "url": "https://hanyu.app",
      "logo": "https://hanyu.app/logo.png",
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "support@hanyu.app",
        "contactType": "customer support",
      },
      "sameAs": [
        "https://www.linkedin.com/company/hanyu.app",
        "https://www.instagram.com/hanyu.app",
        "https://www.facebook.com/hanyu.app",
      ],
    },
    {
      "@type": "SoftwareApplication",
      "name": "Hanyu",
      "operatingSystem": "iOS",
      "applicationCategory": "EducationalApplication",
      "description": "Modern Chinese language learning app for iPhone and iPad with smart flashcards, character writing practice, and pronunciation tools. Android coming soon.",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD",
      },
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is Hanyu?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Hanyu is a Chinese language learning app that helps you master characters, tones, and vocabulary through structured lessons, writing practice, and smart review. Think of it as a personal tutor — available 24/7 and far more affordable.",
          },
        },
        {
          "@type": "Question",
          "name": "Is Hanyu free?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes — Hanyu is free to download and start learning. You can explore lessons, practice writing, and use the dictionary at no cost.",
          },
        },
        {
          "@type": "Question",
          "name": "Who is Hanyu for?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Anyone who wants to learn Mandarin Chinese — from complete beginners to intermediate learners. Whether you're a student, professional, or traveler, Hanyu adapts to your level and goals.",
          },
        },
        {
          "@type": "Question",
          "name": "How is Hanyu different from other Chinese apps?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Most language apps teach Chinese the same way they teach Spanish or French. Hanyu is built specifically for Chinese — with stroke-order writing practice, tone training, radical decomposition, and a structured study path. It focuses on active recall, not passive multiple-choice.",
          },
        },
        {
          "@type": "Question",
          "name": "How much time do I need each day?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Even 10 to 15 minutes of focused practice makes a real difference. Hanyu is designed for short, effective sessions — consistency matters more than marathon study.",
          },
        },
        {
          "@type": "Question",
          "name": "Does Hanyu adapt to my level?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. Hanyu tailors lessons and review based on your progress and learning pace — so you're always challenged at the right level without feeling overwhelmed.",
          },
        },
        {
          "@type": "Question",
          "name": "Can I use Hanyu alongside a class or textbook?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Absolutely. Hanyu works well as both a primary study tool and a supplement. Many learners combine it with classes, textbooks, or immersion activities like watching Chinese dramas.",
          },
        },
        {
          "@type": "Question",
          "name": "Is Hanyu available on Android?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Not yet — Hanyu is currently available on iPhone and iPad. An Android version is in development and coming soon.",
          },
        },
      ],
    },
  ],
};
---

<Layout jsonLd={jsonLd}>
  <Navbar />
  <main>
    <Hero />
    <Features />
    <!-- <Screenshots /> -->
    <WhyHanyu />
    <HowItWorks />
    <FAQ />
    <CTA />
  </main>
  <Footer />
</Layout>

<script>
  // Scroll-reveal observer
  const reveals = document.querySelectorAll('.reveal');
  if (reveals.length) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.15, rootMargin: '0px 0px -40px 0px' }
    );
    reveals.forEach((el) => observer.observe(el));
  }
</script>
