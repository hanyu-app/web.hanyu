---
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

const isVercel = !!process.env.VERCEL;

interface Props {
  title?: string;
  description?: string;
  jsonLd?: Record<string, unknown>;
}

const {
  title = 'Hanyu â€” Learn Chinese naturally with smart, modern tools',
  description = 'Hanyu is a modern Chinese language learning app for iPhone, iPad, and Android with smart flashcards, character writing practice, and pronunciation tools. Join the waitlist today.',
  jsonLd,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Compute dynamic OG image URL based on current page
const pathname = Astro.url.pathname.replace(/^\/|\/$/g, ''); // strip slashes
const ogSlug = pathname || 'index';
const ogImageURL = new URL(`/og/${ogSlug}.png`, Astro.site).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Hanyu" />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="2400" />
    <meta property="og:image:height" content="1260" />
    <meta property="og:image:alt" content={title} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:image:alt" content={title} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#267B5E" />

    <!-- Fonts: Recoleta for headings, Origin for body -->
    <link rel="preload" href="/fonts/recoleta-medium.otf" as="font" type="font/otf" crossorigin />
    <link rel="preload" href="/fonts/origin-book.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Structured Data -->
    {jsonLd && <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />}

    <title>{title}</title>

    <!-- Vercel Analytics -->
    {isVercel && <Analytics />}
  </head>
  <body>
    <slot />
    {isVercel && <SpeedInsights />}
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
